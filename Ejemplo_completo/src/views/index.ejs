<%- include('_header.ejs') %>

<%- include('_navbar') %>

<div class="container">

  <% if(mostrar_msj) { %>
  <div class="alert alert-success" role="alert">
    El producto se agregó correctamente al carrito!
  </div>
  <% } %>

  <h1 class="mt-5 mb-5">Listado de productos</h1>

  <div class="row row-cols-1 row-cols-md-4 g-4">
    <% for(var i = 0; i < productos.length; i++){ %>
    <div class="col">
      <div class="card" style="width: 18rem;">
        <img src="<%= productos[i].imagen %>" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%= productos[i].producto %> </h5>
          <p class="card-text"><%= productos[i].descripcion %></p>
          <a href="/producto/<%= productos[i]._id %>" class="btn btn-primary">Ver más</a>
        </div>
      </div>
    </div>
    <% } %>

  </div>

</div>

<%- include('_footer.ejs') %>