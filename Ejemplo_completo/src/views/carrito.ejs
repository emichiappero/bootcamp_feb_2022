<%- include('_header.ejs') %>

<%- include('_navbar') %>

<div class="container">

  <h1 class="mt-5 mb-5">Detalle de su compra</h1>

  <div class="row">
    <div class="col-md-8">
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Producto</th>
            <th scope="col">Precio</th>
            <th scope="col">Cantidad</th>
            <th>Subtotal</th>
          </tr>
        </thead>
        <tbody>
          <% for(var i = 0; i < pedidos.length; i++){ %>
          <tr>
            <td><%= pedidos[i].id_producto %></td>
            <td><%= pedidos[i].nombre_producto %></td>
            <td><%= pedidos[i].precio_unitario %></td>
            <td><%= pedidos[i].cantidad %></td>
            <td><%= pedidos[i].total %></td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>

  </div>

</div>

<%- include('_footer.ejs') %>