<%- include('_header.ejs') %>

<%- include('_navbar') %>

<div class="container">

  <h1 class="mt-5 mb-5">Detalle de su compra</h1>

  <div class="row gx-5">
    <div class="col-md-8">
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Producto</th>
            <th scope="col">Precio</th>
            <th scope="col">Cantidad</th>
            <th>Subtotal</th>
            <th>...</th>
          </tr>
        </thead>
        <tbody>
          <% var tot = 0; %>
          <% for(var i = 0; i < pedidos.length; i++){ %>
          <tr>
            <td><span class="badge bg-dark"><%= pedidos[i].id_producto %></span></td>
            <td>
              <%= pedidos[i].nombre_producto %>
            </td>
            <td><%= pedidos[i].precio_unitario %></td>
            <td><%= pedidos[i].cantidad %></td>
            <td><%= pedidos[i].total %></td>
            <td><a href="/eliminar/<%= pedidos[i]._id %>"><i class="bi bi-trash3 text-danger"></i></a></td>
          </tr>
          <% tot = tot + (pedidos[i].cantidad * pedidos[i].precio_unitario)  %>
          <% } %>
        </tbody>
        <tfoot>
          <tr>
            <td class="text-end" colspan="4">
              <h4>TOTAL</h4>
            </td>
            <td colspan="2">
              <h4>$ <%= tot %></h4>
            </td>
          </tr>
        </tfoot>
      </table>
    </div>

    <div class="col-md-4 border p-4">
      <form class="row g-3">
        <div class="col-md-6">
          <label for="inptuNombre" class="form-label">Nombre y Apellido</label>
          <input type="text" class="form-control" id="inptuNombre">
        </div>
        <div class="col-md-6">
          <label for="inputEmail4" class="form-label">Email</label>
          <input type="email" class="form-control" id="inputEmail4">
        </div>

        <div class="col-12">
          <label for="inputAddress" class="form-label">Dirección</label>
          <input type="text" class="form-control" id="inputAddress" placeholder="1234 Main St">
        </div>
        <div class="col-12">
          <label for="inputAddress2" class="form-label">Dirección 2</label>
          <input type="text" class="form-control" id="inputAddress2" placeholder="Apartment, studio, or floor">
        </div>
        <div class="col-md-6">
          <label for="inputCity" class="form-label">Ciudad</label>
          <input type="text" class="form-control" id="inputCity">
        </div>
        <div class="col-md-4">
          <label for="inputState" class="form-label">Estado</label>
          <select id="inputState" class="form-select">
            <option selected>Elegir...</option>
            <option>...</option>
          </select>
        </div>
        <div class="col-md-2">
          <label for="inputZip" class="form-label">CP</label>
          <input type="text" class="form-control" id="inputZip">
        </div>
        <div class="col-12">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="gridCheck">
            <label class="form-check-label" for="gridCheck">
              Acepto Términos y Condiciones
            </label>
          </div>
        </div>
        <div class="col-12">
          <button type="submit" class="btn btn-success">PAGAR</button>
        </div>
      </form>
    </div>
  </div>

</div>


<%- include('_footer.ejs') %>